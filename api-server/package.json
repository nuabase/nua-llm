{
  "name": "api",
  "version": "1.0.0",
  "description": "Nuabase Node web server for llm transforms",
  "packageManager": "pnpm@10.20.0",
  "main": "dist/index.js",
  "imports": {
    "#bg-tasks/*": "./dist/bg-tasks/*.js",
    "#handlers/*": "./dist/handlers/*.js",
    "#lib/*": "./dist/lib/*.js",
    "#llm_authorization/*": "./dist/llm_authorization/*.js",
    "#middleware/*": "./dist/middleware/*.js",
    "#modules/*": "./dist/modules/*.js",
    "#types/*": "./dist/types/*.js"
  },
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "dev": "node copy-shared-constants.js && hivemind --port 3030 --no-prefix ./Procfile.dev",
    "llm:harness": "pnpm run build && dotenvx run --env-file ./src/.env -- node dist/scripts/llm-provider-harness.js",
    "test": "dotenvx run --env-file ./src/.env -- jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "typescript",
    "express",
    "nodejs"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/pg": "^8.11.14",
    "nua-llm-core": "workspace:^",
    "nua-llm-caching": "workspace:^",
    "ajv": "^8.17.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "graphile-worker": "^0.16.6",
    "jose": "^6.1.1",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "pg": "^8.15.6",
    "redis": "^5.1.0",
    "svix": "^1.76.1",
    "ts-json-schema-generator": "^2.4.0",
    "winston": "^3.17.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.36.0",
    "jest": "^30.1.3",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  }
}